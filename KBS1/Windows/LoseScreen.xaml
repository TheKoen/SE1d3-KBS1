<UserControl x:Class="KBS1.Windows.LoseScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KBS1"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Rectangle Fill="#FF26A2D9" Height="250" Width="250" Margin="375,180,375,170" Stroke="#FF085463"
                   VerticalAlignment="Top" />
        <Label x:Name="LossLabel" Content="You have lost!" HorizontalAlignment="Left" Margin="445,223,0,0"
               VerticalAlignment="Top" Width="128" Height="41" Foreground="#FF085463" FontSize="18" />
        <Button x:Name="RetryButton" Content="Retry" HorizontalAlignment="Left" Margin="468,313,0,0"
                VerticalAlignment="Top" Width="75" Click="RetryButton_Click" Background="#3F085463" BorderBrush="#FF085463" />
        <Button x:Name="BackToMainMenuButton" Content="Main menu" HorizontalAlignment="Left" Margin="468,361,0,0"
                VerticalAlignment="Top" Width="75" Click="BackToMainMenuButton_Click" Background="#3F085463" BorderBrush="#FF085463" />
    </Grid>
</UserControl>