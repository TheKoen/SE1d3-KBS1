<UserControl x:Class="KBS1.Windows.ObjectInfoContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KBS1"
             mc:Ignorable="d" MinHeight="142" MinWidth="200" MaxHeight="142" MaxWidth="200">
    <Grid Background="LightGreen">
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0" Panel.ZIndex="0" />

        <Image x:Name="ImgIcon" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
               Width="40" Panel.ZIndex="1" />
        <TextBlock x:Name="TxbName" TextWrapping="Wrap" Height="30" Margin="70,15,10,0" Text="ObjectName"
                   Panel.ZIndex="1" VerticalAlignment="Top" FontSize="20" />
        <TextBlock x:Name="TxbDescription" TextWrapping="Wrap" Margin="10,60,10,10" Text="ObjectDescription"
                   Panel.ZIndex="1" />
    </Grid>
</UserControl>