<UserControl x:Class="KBS1.LoseScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KBS1"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Rectangle Fill="#FFF73737" Height="250" Width="250" Margin="375,180,375,170" Stroke="Black" VerticalAlignment="Top" />
        <Label x:Name="LossLabel" Content="You have lost!" HorizontalAlignment="Left" Margin="460,223,0,0" VerticalAlignment="Top"/>
        <Button x:Name="RetryButton" Content="Retry" HorizontalAlignment="Left" Margin="468,313,0,0" VerticalAlignment="Top" Width="75" Click="RetryButton_Click" />
        <Button x:Name="BackToMainMenuButton" Content="Main menu" HorizontalAlignment="Left" Margin="468,361,0,0" VerticalAlignment="Top" Width="75" Click="BackToMainMenuButton_Click" />

    </Grid>
</UserControl>
